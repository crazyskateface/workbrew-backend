{
    "name": "workbrew-backend",
    "version": "0.1.0",
    "description": "Backend service for Workbrew - remote workplace finder",
    "type": "module",
    "scripts": {
        "dev": "cross-env NODE_ENV=development bun run --watch src/local-server.ts",
        "test": "bun test",
        "test-db": "cross-env NODE_ENV=development bun run tests/test-db.ts",
        "deploy": "cd infra && bun run cdk deploy",
        "lint": "eslint . --ext .ts"
    },
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.x",
        "@aws-sdk/client-s3": "^3.x",
        "@aws-sdk/lib-dynamodb": "^3.x",
        "@types/bun": "^1.2.5",
        "aws-lambda": "^1.0.7",
        "uuid": "^9.x",
        "zod": "^3.x"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.x",
        "@types/node": "^20.x",
        "@types/uuid": "^9.x",
        "aws-cdk-lib": "^2.x",
        "bun-types": "latest",
        "constructs": "^10.x",
        "cross-env": "^7.0.3",
        "eslint": "^8.x",
        "typescript": "^5.x"
    }
}